<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <h1 class="title">Todo List</h1>
    
<article class="container">

    <form action="/add" method="post" class="addTask">
        
        <input type="text" name="task" placeholder="Add a new task" required>
        <button type="submit">Add</button>

    </form>
    
    <ul class="taskList">
            <h2 class="title">Task List</h2>
            <% tasks.forEach(function(task, index) { %>

        <li class="list">

<!-- ! Add tasks to the list -->
                <div class="completedSection">
                    
                    <form action="/complete/<%= index %>" method="post">
                        <label id="taskItem"><%= task.task %>
                            <input type="checkbox" name="completed" <%= task.completed ? 'checked' : '' %> >
                            <span class="mark"></span>
                        </label>
                    </form>

                </div>

<!-- !buttons -->
            <div class="buttons">
<!-- ! Edit tasks -->
                <div class="editSection">
                    <form action="/edit/<%= index %>" method="post">
                        <button type="button" id="editBtn">Edit</button>
                        
                        <input type="text" name="updatedTask" placeholder="Edit task" id="editTxt" style="display: none;" required>

                        <button type="submit" id="saveEditBtn" style="display: none;" >Save</button>
                        
                        <button type="button" id="cancelBtn" style="display: none;" >Cancel</button>
                    </form>
                </div>
                
<!-- ! Delete tasks -->
                <div class="deleteSection">
                    <form action="/delete/<%= index %>" method="get">
                        <button type="submit" id="deleteBtn">Delete</button>
                    </form>
                </div>
            </div>

        </li>
            <% }); %>
    </ul>
</article>

    <script src="index.js"></script>
</body>
</html>